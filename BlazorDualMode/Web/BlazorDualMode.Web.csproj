<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<RuntimeIdentifier Condition=" '$(BlazorMode)' == 'Client' ">browser-wasm</RuntimeIdentifier>
		<UseBlazorWebAssembly Condition=" '$(BlazorMode)' == 'Client' ">true</UseBlazorWebAssembly>
	</PropertyGroup>

	<ItemGroup>
		<Content Condition=" '$(BlazorMode)' == 'Client' " Remove="appsettings.json" />
		<Content Condition=" '$(BlazorMode)' == 'Client' " Remove="Pages\_Host.cshtml" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Condition=" '$(BlazorMode)' == 'Client' " Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.0-preview.8.20414.8" />
		<PackageReference Condition=" '$(BlazorMode)' == 'Client' " Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.0-preview.8.20414.8" PrivateAssets="all" />
		<PackageReference Include="System.Net.Http.Json" Version="5.0.0-preview.8.20407.11" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Shared\BlazorDualMode.Shared.csproj" />
	</ItemGroup>

</Project>
